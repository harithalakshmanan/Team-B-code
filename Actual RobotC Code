#pragma config(Motor,  port1,           baseRightFront, tmotorVex393_HBridge, openLoop)
#pragma config(Motor,  port2,           baseLeftFront, tmotorVex393_MC29, openLoop)
#pragma config(Motor,  port3,           baseRightBack, tmotorVex393_MC29, openLoop, reversed)
#pragma config(Motor,  port4,           baseLeftBack,  tmotorVex393_MC29, openLoop, reversed)
#pragma config(Motor,  port5,           claw,          tmotorVex393HighSpeed_MC29, openLoop)
#pragma config(Motor,  port6,           armRight,      tmotorVex393_MC29, openLoop)
#pragma config(Motor,  port7,           armLeft,       tmotorVex393_MC29, openLoop)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

#include "drive.h"

task main()
{

	//assign variables
	int armspeed = 127;
	//speed of arm
	int clawspeed = 127;
	//speed of claw
	int x = 10;
	//reference variable

	//create variables
	float left_speed = 0;
	float right_speed = 0;
	//initial speed of the left and right side is
	int open_claw  = 0;
	int close_claw = 0;
	int lift_arm = 0;
	int lower_arm = 0;
	//sets the initial speed of the claw and the arm (both sides)

	//drive

	while(true)
	{
		//orient the code with their associated channels
		left_speed = vexRT[Ch3];
		right_speed = vexRT[Ch2];
		open_claw = vexRT[Btn6U];
		close_claw = vexRT[Btn5U];
		lift_arm = vexRT[Btn6D];
		lower_arm = vexRT[Btn5D];

		//to move the left side
		if (abs(left_speed) < x)
		{
			left_speed = 0;
		}

		//to move the right side
		if (abs(right_speed) < x)
		{
			right_speed = 0;
		}

		//to physically drive the robot
		drive(left_speed, right_speed);


		//move arm

		if(lift_arm == 1) // raise arm with button 6U
		{
			setArm(armspeed);
		}
		else if(lower_arm == 1) //lower arm with button 6D
		{
			setArm(-armspeed);
		}
		else
		{
			stopArm();
		}

		//move claw

		if(open_claw == 1) // open claw with button 5U
		{
			setClaw(clawspeed);
		}
		else if(close_claw == 1) //close claw with button 5D
		{
			setClaw(-clawspeed);
		}
		else
		{
			stopClaw();
		}
	}

}

